<form method="post" action="{{ path('app_booking_delete', {'id': booking.id}) }}"
      onsubmit="return confirm({{ 'Are you sure you want to delete this item?'|trans }});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
    <button class="btn"><i class="fa fa-trash text-danger" aria-hidden="true"></i></button>
</form>
