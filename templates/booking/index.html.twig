{% extends 'base.html.twig' %}

{% block title %}Last Booking{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <h1>Last Booking</h1>

            <table class="table">
                <caption>The last 3 booking</caption>
                <thead>
                <tr>
                    <th>Establishment</th>
                    <th>Suite</th>
                    <th>Date_debut</th>
                    <th>Date_fin</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for booking in bookings %}
                    <tr>
                        <td>{{ booking.getestablishment.nom }}</td>
                        <td>{{ booking.getsuite.titre }}</td>
                        <td>{{ booking.dateDebut ? booking.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.dateFin ? booking.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ booking.prix }}</td>
                        {% if date(booking.dateDebut) > date("now+3days")  %}
                            <td class="text-center">
                                <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                            </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <p>you have three days before the start reservation to modify date or cancel it</p>
        </div>
    </section>
{% endblock %}
