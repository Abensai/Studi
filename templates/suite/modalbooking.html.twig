<div class="modal fade" id="bookingModal" tabindex="-1" role="document" aria-labelledby="bookingModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Booking </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <section class="booking">
                    <div class="container">
                        <form action="" class="form">
                            <div class="input-group">
                                <label for="establishment" class=input-label">Establishment</label>
                                <input type="text" class="input" id="establishment" placeholder="HOTEL PARIS" disabled/>
                            </div>
                            <div class="input-group">
                                <label for="suite" class=input-label">Suite</label>
                                <input type="text" class="input" id="suite" placeholder="SUITE ROYAL" disabled/>
                            </div>
                            <div class="input-group">
                                <label for="date-on" class=input-label">Date In</label>
                                <input type="date" class="input" id="date-on">
                            </div>
                            <div class="input-group">
                                <label for="date-out" class=input-label">Date Out</label>
                                <input type="date" class="input" id="date-out">
                            </div>
                        </form>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn form-btn"><em class="dots"><i class="fa-solid fa-paper-plane-top"></i> Check</em></button>
            </div>
        </div>
    </div>
</div>