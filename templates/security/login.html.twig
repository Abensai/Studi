<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Log in!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="login">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="d-flex flex-column justify-content-center text-center mb-5 mt-5">
            <h1 class="">HYPNOS CONNECT</h1>
            <div>
                <em class="fa-solid fa-house-chimney"></em><a href="{{ path('app_home') }}" class="text-decoration-none">  Return Home</a>
            </div>
        </div>
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="inputEmail" class="label">E-mail</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input" autocomplete="email" required autofocus>
                        </div>
                        <div class="group">
                            <label for="inputPassword" class="label">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control input" autocomplete="current-password" data-type="password" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="group checkbox d-flex mb-3">
                            <input id="check" class="icon check" type="checkbox" name="_remember_me">
                            <label for="check" class="label"> Remember me</label>
                        </div>

                        <div class="group">
                            <input type="submit" class="button" value="Sign In">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="{{ path('app_login', {'_fragment': 'forgot'}) }}">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="inputEmail" class="label">E-mail</label>
                            <input id="inputEmail" type="text" class="form-control input" required>
                        </div>
                        <div class="group">
                            <label for="inputPassword" class="label">Password</label>
                            <input id="inputPassword" type="password" class="form-control input" data-type="password" required>
                        </div>
                        <div class="group">
                            <label for="inputPassword" class="label">Repeat Password</label>
                            <input id="inputPassword" type="password" class="form-control input" data-type="password" required>
                        </div>

                        <div class="group">
                            <input type="submit" class="button" value="Sign Up">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label for="tab-1">Already Member?</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>