{% extends 'base.html.twig' %}

{% block title %}{{ 'Log in!'|trans }}{% endblock %}

{% block body %}
    <section>
        <div class="container py-5">
            <form method="post" class="m-5">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if not app.user %}
                    <h1 class="h3 mt-5 mb-3 font-weight-normal">{{ 'Please sign in'|trans }}</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required autofocus>
                    <label for="inputPassword">{{ 'Password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn btn-lg btn-register mb-3" type="submit">{{ 'Sign in'|trans }}</button>
                    <div class="mb-5">
                        <a href="{{ path('app_register') }}">{{ 'you are not registered?'|trans }}</a>
                    </div>
                {% else %}
                    <div class="mb-3">
                        {{ 'You are Connected as'|trans }} {{ last_username }} !
                        <a href="{{ path('app_logout') }}">{{ 'Logout'|trans }}</a>
                    </div>
                {% endif %}
            </form>
        </div>
    </section>
{% endblock %}