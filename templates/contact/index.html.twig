{% extends 'base.html.twig' %}

{% block title %}{{ 'Contact'|trans }}{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <section>
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-between gx-0 min-vh-100">
                <div class="col-12 col-md-5 align-self-center">
                    <img src="{{ asset('build/images/tholaal-mohamed.jpg') }}" class="img-cover" alt="">
                    <div class="d-none d-md-block vw-100 float-end bg-cover"></div>
                </div>
                <div class="col-12 col-md-6 py-5 py-md-5">
                    <h1 class="fw-bold text-center mb-2">
                        {{ 'Get in touch with us'|trans }}
                    </h1>
                    <h3 class="fs-lg text-center mb-0">
                        {{ 'Contact'|trans }}
                    </h3>
                    <hr class="hr-sm my-3 my-md-3 mx-auto bg-dark">

                    {{ form_start(form) }}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <div class="my-custom-class-for-errors">
                            {{ form_errors(form) }}
                        </div>

                        <div class="form-group mb-2">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom) }}
                        </div>

                        <div class="form-group mb-2">
                            {{ form_label(form.prenom) }}
                            {{ form_widget(form.prenom) }}
                        </div>

                        <div class="form-group mb-2">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>

                        <div class="form-group mb-2">
                            {{ form_label(form.sujet) }}
                            {{ form_widget(form.sujet) }}
                        </div>

                        <div class="form-group mb-2">
                            {{ form_label(form.message) }}
                            {{ form_widget(form.message) }}
                        </div>

                        <div class="form-group mb-0">
                            {{ form_widget(form.envoyer) }}
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
